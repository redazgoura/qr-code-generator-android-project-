<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="329dp"
        android:layout_height="55dp"
        android:layout_marginVertical="20dp"
        android:ems="10"
        android:hint="Taper du texte"
        android:inputType="textPersonName" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginVertical="50dp"
        android:background="@color/lynxwhite"
        android:src="@drawable/abc_action_bar_item_background_material"
        tools:visibility="visible" />



    <Button
        android:id="@+id/btn_generate"
        android:text="Create Qr"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/charcoal"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/ic_baseline_create_24"
      />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/charcoal"
        android:textColor="@android:color/white"
        android:text="SAVE"
        android:drawableLeft="@drawable/ic_baseline_save_alt_24"/>
    <Button
        android:id="@+id/btn_scan"
        android:layout_width="214dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/charcoal"
        android:textColor="@android:color/white"
        android:text="Scan"
        android:drawableLeft="@drawable/ic_baseline_subdirectory_arrow_right_24"/>



</LinearLayout>
